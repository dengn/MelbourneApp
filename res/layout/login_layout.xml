<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/sidebar_bg">

    <TextView
        android:id="@+id/login_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="80px"
        android:layout_marginLeft="50px"
        android:layout_marginBottom="50px"
        android:textSize="60px"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/login_number"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/login_left_logo"
        android:drawablePadding="30px"
   		android:paddingLeft="50px"
   		android:paddingRight="40px"
        android:singleLine="true"
        android:scrollHorizontally="true" 
        android:maxLength="10"
        android:textSize="70px"
        android:textColor="@color/white"
        android:numeric="integer"
        android:width="200dp" 
        android:background="#50000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal" 
        android:layout_marginTop="30px"
        android:layout_marginLeft="80px">

        <CheckBox
            android:id="@+id/login_aggrement_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />

        <TextView
            android:id="@+id/login_text_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="60px"
        	android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="800px"
        android:layout_height="150px"
		android:textSize="70px"
        android:text="登录" 
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="#50000000"/>
  <!--       android:background="@drawable/buttonstyle" --> 
        

</LinearLayout>