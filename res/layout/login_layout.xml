<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/sidebar_bg">

    <TextView
        android:id="@+id/login_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="27dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="17dp"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/login_number"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/login_left_logo"
        android:drawablePadding="10dp"
   		android:paddingLeft="17dp"
   		android:paddingRight="13dp"
        android:singleLine="true"
        android:scrollHorizontally="true" 
        android:maxLength="10"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:numeric="integer"
        android:width="200dp" 
        android:background="#50000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="27dp">

        <CheckBox
            android:id="@+id/login_aggrement_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />

        <TextView
            android:id="@+id/login_text_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="20dp"
        	android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="267dp"
        android:layout_height="50dp"
		android:textSize="23sp"
        android:text="登录" 
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/button_style"
        />
  <!--       android:background="#50000000" --> 
        

</LinearLayout>