<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sidebar_bg"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/myaccount_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/lightlightgray"
        android:dividerHeight="1dp" />

    <ListView
        android:id="@+id/myaccount_list_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="252dp"
        android:layout_above="@+id/myaccount_list"
        android:layout_alignParentBottom="true"
        android:divider="@color/lightlightgray"
        android:dividerHeight="1dp" />

    <ListView
        android:id="@+id/myaccount_list_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="315dp"
        android:divider="@color/lightlightgray"
        android:layout_above="@+id/myaccount_list_address"
        android:layout_alignParentBottom="true"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="267dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="45dp"
        android:background="#50000000"
        android:text="退出此账号"
        android:textColor="@color/white"
        android:textSize="23dp" />

</RelativeLayout>